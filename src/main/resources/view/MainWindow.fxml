<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="MainWindow"
            prefWidth="400.0" prefHeight="600.0">

    <children>
        <!-- ScrollPane for dialog messages -->
        <ScrollPane fx:id="scrollPane"
                    fitToWidth="true"
                    hbarPolicy="NEVER"
                    vbarPolicy="ALWAYS"
                    AnchorPane.topAnchor="0.0"
                    AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0"
                    AnchorPane.bottomAnchor="50.0">
            <content>
                <VBox fx:id="dialogContainer"
                      spacing="10"
                      style="-fx-padding: 10;"
                      fillWidth="true"/>
            </content>
        </ScrollPane>

        <!-- Text input field -->
        <TextField fx:id="userInput"
                   promptText="Type your message here..."
                   onAction="#handleUserInput"
                   prefHeight="40.0"
                   AnchorPane.leftAnchor="10.0"
                   AnchorPane.bottomAnchor="5.0"
                   AnchorPane.rightAnchor="90.0" />

        <!-- Send button -->
        <Button fx:id="sendButton"
                text="Send"
                onAction="#handleUserInput"
                prefHeight="40.0"
                prefWidth="70.0"
                AnchorPane.rightAnchor="10.0"
                AnchorPane.bottomAnchor="5.0" />
    </children>
</AnchorPane>
